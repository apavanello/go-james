{
    "project": {
        "name": "go-james",
        "version": "1.6.0",
        "description": "James is your butler and helps you to create, build, test and run your Go projects",
        "copyright": "Â© 2020 Copyright Pieter Claerhout",
        "package": "github.com/pieterclaerhout/go-james",
        "main_package": "github.com/pieterclaerhout/go-james/cmd/go-james"
    },
    "build": {
        "output_path": "build/",
        "ld_flags": ["-s", "-w"],
        "ld_flags_windows": [],
        "ld_flags_darwin": [],
        "ld_flags_linux": [],
        "extra_args": ["-trimpath"],
        "use_gotip": false
    },
    "run": {
        "environ": {}
    },
    "package": {
        "include_readme": true
    },
    "test": {
        "extra_args": []
    },
    "staticcheck": {
        "checks": ["all", "-ST1005", "-ST1000"]
    },
    "docker-image": {
        "name": "go-james",
        "repository": "pieterclaerhout/go-james",
        "tag": "version",
        "prune_images_after_build": true
    }
}